<section id="contact">

  <header id="contact">
    <h3>Contact Us</h3>
  </header>
  <br><br>

  <div class="container">
    <div class="row">

      <div class="col-sm-6">
        <h3>the Grain Station</h3>
        <p>2004 Central Ave SE</p>
        <p>Albuquerque, New Mexico</p>
        <p><%= icon('phone') %> (505) 242-4992</p>

        <br><br>

        <%= link_to icon('facebook-official', class: 'fa-3x'), 'https://www.facebook.com/thegrainstation', target: 'blank' %>
        <%= link_to icon('twitter-square', class: 'fa-3x'), 'https://www.facebook.com/thegrainstation', target: 'blank' %>
      </div>

      <div class="col-sm-6">

        <%= form_for '#' do |f| %>

          <div class="form-group" id="name">
            <%= f.text_field :name, class: 'form-control', placeholder: 'Your name' %>
          </div>
          <div class="form-group">
            <%= f.text_field :email, class: 'form-control', placeholder: 'Your email' %>
          </div>
          <div class="form-group">
            <%= f.text_field :phone, class: 'form-control', placeholder: 'Your phone' %>
          </div>
          <div class="form-group">
            <%= f.text_area :message, class: 'form-control', placeholder: 'Your message' %>
          </div>

          <div class="text-center" id="success">
            <%= f.submit 'SEND MESSAGE', class: 'btn btn-xl' %>
          </div><!-- actions -->

        <% end %><!-- form -->


      </div>

    </div><!-- row -->
  </div><!-- container -->


</section>
