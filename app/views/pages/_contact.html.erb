<section id="contact">

  <header id="contact">
    <h3>Contact Us</h3>
  </header>

  <%= form_for '#' do |f| %>

  <div class="row">

    <div class="col-sm-6 contact-info">

      <div class="form-group" id="name">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Your name' %>
      </div>

      <div class="form-group">
        <%= f.text_field :email, class: 'form-control', placeholder: 'Your email' %>
      </div>

      <div class="form-group">
        <%= f.text_field :phone, class: 'form-control', placeholder: 'Your phone' %>
      </div>

    </div>

    <div class="col-md-6 send-msg">

      <div class="form-group">
        <%= f.text_area :message, class: 'form-control', placeholder: 'Your message' %>
      </div>

    </div><!-- send-msg -->

    <div class="col-lg-12 text-center" id="success">
      <%= f.submit 'submit', class: 'btn btn-xl' %>
    </div><!-- actions -->

  </div>

  <% end %><!-- form -->

</section>
