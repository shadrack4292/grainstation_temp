<% menu.each do |m| %>
<div class="menu-modal modal fade" id="menuModal<%= m.id %>" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-content">
        <div class="close-modal" data-dismiss="modal">
            <div class="lr">
                <div class="rl">
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <div class="modal-body">
                        <!-- Project Details Go Here -->
                        <h2><%= m.name %></h2>
                        <p class="item-intro text-muted"><%= m.price %></p>
                        <%= image_tag 'bratwurst.jpg', class: 'img-responsive img-centered', alt: '' %>
                        <p><%= m.description %></p>
                        <button type="button" class="btn btn-primary" data-dismiss="modal"><i class="fa fa-times"></i> Close Menu Item</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% end %>
